<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".userProfile_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/profileeditbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@drawable/profileimagbg">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/profileback_button"
                            android:layout_width="wrap_content"

                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/back_arrow"
                            app:tint="@color/white" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="-15dp"
                            android:src="@drawable/profile"
                            app:civ_border_color="@color/basecolor"
                            app:civ_border_overlay="true"
                            app:civ_border_width="3dp" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/changeimage"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="-35dp"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="50dp">

                            <ImageView
                                android:id="@+id/imageView6"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:padding="3dp"

                                app:srcCompat="@drawable/camera_icon" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/studentname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="10dp"
                            android:gravity="center"
                            android:fontFamily="@font/oswald"
                            android:textColorHint="@color/hinttextcolor"
                            android:hint="Student name"
                            android:textColor="@color/white"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/studentemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center"
                            android:layout_marginTop="4dp"
                            android:textColorHint="@color/hinttextcolor"
                            android:fontFamily="@font/poppins"
                            android:hint="StudentEmailId@gmail.com"
                            android:textColor="@color/white"
                            android:textSize="16sp" />
                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="-50dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:backgroundTint="#FFFFFF"
                        app:cardCornerRadius="20dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/paymentcard"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="7dp"
                                        android:backgroundTint="@color/basecolor"
                                        app:cardCornerRadius="50dp">

                                        <ImageView
                                            android:id="@+id/imageView3"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            app:srcCompat="@drawable/payment_icon"
                                            app:tint="@color/white" />

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:id="@+id/textView2"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/oswald"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="Payment"
                                        android:textAllCaps="false"
                                        android:textColor="@color/headingcolor"
                                        android:textSize="20sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/settingcard"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="7dp"
                                        android:backgroundTint="@color/button_icon_color"
                                        app:cardCornerRadius="50dp">

                                        <ImageView
                                            android:id="@+id/imageView4"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            app:srcCompat="@drawable/setting_icon"
                                            app:tint="@color/white" />
                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:id="@+id/textView3"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/oswald"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="Settings"
                                        android:textAllCaps="false"
                                        android:textColor="@color/headingcolor"
                                        android:textSize="20sp" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:gravity="center"
                                    android:orientation="vertical">

                                    <androidx.cardview.widget.CardView
                                        android:id="@+id/notificationcard"
                                        android:layout_width="60dp"
                                        android:layout_height="60dp"
                                        android:layout_margin="7dp"
                                        android:backgroundTint="#F5F5F5"
                                        app:cardCornerRadius="50dp">

                                        <ImageView
                                            android:id="@+id/imageView5"
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            app:srcCompat="@drawable/notification_icon"
                                            app:tint="@color/basecolor" />

                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:id="@+id/textView7"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/oswald"
                                        android:gravity="center"
                                        android:padding="3dp"
                                        android:text="Notification"
                                        android:textAllCaps="false"
                                        android:textColor="@color/headingcolor"
                                        android:textSize="20sp" />

                                </LinearLayout>
                            </LinearLayout>

                            <View
                                android:id="@+id/divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_marginStart="16dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="16dp"
                                android:background="@color/basecolor" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="5dp"
                                android:layout_marginBottom="50dp"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="false"
                                        android:layout_alignParentBottom="false"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="left"
                                        android:padding="3dp"
                                        android:text="DOB"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/setdob"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="right"
                                        android:padding="3dp"
                                        android:hint="02 May 2022"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="false"
                                        android:layout_alignParentBottom="false"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="left"
                                        android:padding="3dp"
                                        android:text="Gender"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/gender"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="right"
                                        android:padding="3dp"
                                        android:hint="Male"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="false"
                                        android:layout_alignParentBottom="false"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="left"
                                        android:padding="3dp"
                                        android:text="Contact no"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/setcontactno"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="right"
                                        android:padding="3dp"
                                        android:hint="+91 - 8937XXXXX"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="false"
                                        android:layout_alignParentBottom="false"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="left"
                                        android:padding="3dp"
                                        android:text="Address"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/setaddress"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="right"
                                        android:padding="3dp"
                                        android:hint="Plot 8A, Tech Zone Noida"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />
                                </RelativeLayout>
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="false"
                                        android:layout_alignParentBottom="false"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="left"
                                        android:padding="3dp"
                                        android:text="Pincode"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/setpincode"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="right"
                                        android:padding="3dp"
                                        android:hint="302021"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="false"
                                        android:layout_alignParentBottom="false"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="left"
                                        android:padding="3dp"
                                        android:text="City"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/setcity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="right"
                                        android:padding="3dp"
                                        android:hint="Jaipur"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="false"
                                        android:layout_alignParentBottom="false"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="left"
                                        android:padding="3dp"
                                        android:text="State"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/setstate"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="right"
                                        android:padding="3dp"
                                        android:hint="Uttar Pradesh"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />
                                </RelativeLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="8dp">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentStart="true"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="false"
                                        android:layout_alignParentBottom="false"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="left"
                                        android:padding="3dp"
                                        android:text="Country"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />

                                    <TextView
                                        android:id="@+id/setcountry"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentTop="true"
                                        android:layout_alignParentEnd="true"
                                        android:fontFamily="@font/poppins"
                                        android:gravity="right"
                                        android:padding="3dp"
                                        android:hint="India"
                                        android:textColor="@color/textcolor"
                                        android:textSize="16sp" />
                                </RelativeLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <Button
        android:id="@+id/profileeditbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/buttonbg"
        android:fontFamily="@font/oswald"
        android:text="Edit Profile"
        android:textAllCaps="false"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>