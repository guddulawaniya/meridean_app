<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".Edit_profile_Fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/updatebutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/oswald"
                    android:text="Update Profile"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Your Name "
                    android:textColorHint="#9F9E9E"
                    app:boxStrokeColor="@color/basecolor"
                    app:boxStrokeErrorColor="#EA0000"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/basecolor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/updatename"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"

                    android:hint="Email "
                    android:textColorHint="#9F9E9E"
                    app:boxStrokeColor="@color/basecolor"
                    app:boxStrokeErrorColor="#EA0000"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/basecolor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:id="@+id/updateemail"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="DOB "
                    app:endIconMode="custom"
                    app:endIconDrawable="@drawable/calendar_icon"
                    app:endIconTint="@color/button_icon_color"
                    android:textColorHint="#9F9E9E"
                    app:boxStrokeColor="@color/basecolor"
                    app:boxStrokeErrorColor="#EA0000"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/basecolor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:inputType="date"
                        android:id="@+id/updatedob"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Contact no "
                    android:textColorHint="#9F9E9E"
                    app:boxStrokeColor="@color/basecolor"
                    app:boxStrokeErrorColor="#EA0000"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/basecolor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:id="@+id/updatecontactnumber"
                        android:inputType="phone"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Pin Code"
                    android:textColorHint="#9F9E9E"
                    app:boxStrokeColor="@color/basecolor"
                    app:boxStrokeErrorColor="#EA0000"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/basecolor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:inputType="number"
                        android:id="@+id/updatepincode"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="Address"
                    android:textColorHint="#9F9E9E"
                    app:boxStrokeColor="@color/basecolor"
                    app:boxStrokeErrorColor="#EA0000"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/basecolor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:id="@+id/updateaddress"
                        android:textColor="@color/textcolor"
                        android:inputType="textPostalAddress"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="City"
                    android:textColorHint="#9F9E9E"
                    app:boxStrokeColor="@color/basecolor"
                    app:boxStrokeErrorColor="#EA0000"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/basecolor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:id="@+id/updatecity"
                        android:inputType="text"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:hint="State"

                    android:textColorHint="#9F9E9E"
                    app:boxStrokeColor="@color/basecolor"
                    app:boxStrokeErrorColor="#EA0000"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/basecolor">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/updatestate"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/textcolor"
                        android:inputType="text"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:hint="Country"
                    android:textColorHint="#9F9E9E"
                    app:endIconTint="@color/button_icon_color"
                    app:boxStrokeColor="@color/basecolor"
                    app:boxStrokeErrorColor="#EA0000"
                    app:hintAnimationEnabled="true"
                    app:hintTextColor="@color/basecolor">

                    <AutoCompleteTextView
                        android:id="@+id/selectcountryupdate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:textColor="@color/textcolor"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:id="@+id/updatecheckbox"
                    android:layout_marginBottom="20dp"
                    android:buttonTint="@color/buttonbgcolor"
                    android:fontFamily="@font/poppins"
                    android:text="Click Now"
                    android:textColor="@color/textcolor"
                    android:textSize="16sp" />


            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <Button
        android:id="@+id/updatebutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/buttonbg"
        android:fontFamily="@font/oswald"
        android:gravity="center"
        android:text="Update"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteX="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>